<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardContactItem"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imgContactItem"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nombreContactItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Nombre Contacto"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/numeroContactoItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="+00 000 000 0000" />

                <TextView
                    android:id="@+id/emailContactoItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="mail@mail.com" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/layActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="visible"
        android:paddingVertical="10dp">

        <Button
            android:id="@+id/toogleMSG"
            style="@style/iconYelow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            app:icon="@drawable/ic_messages" />

        <Button
            android:id="@+id/toggleCall"
            style="@style/icongreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            app:icon="@drawable/ic_call" />

        <Button
            android:id="@+id/toggleEdit"
            style="@style/iconblack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            app:icon="@drawable/ic_baseline_edit_24" />

        <Button
            android:id="@+id/toggleDelete"
            style="@style/iconred"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            app:icon="@drawable/ic_delete" />

    </LinearLayout>

</LinearLayout>